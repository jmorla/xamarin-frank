<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.Page1">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Padding="12" BackgroundColor="Purple">
                <Label Text="Row 0" FontSize="25"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Padding="12" BackgroundColor="Green">
                <Label Text="Row 1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>

            <StackLayout Grid.Row="2" BackgroundColor="Maroon"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>